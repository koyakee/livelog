<div class="concert-detail">
  <h2><%= @concert.title %></h2>
  <div class="concert-info">
    <p><strong>アーティスト名：</strong><%= @concert.artist %></p>
    <p><strong>ステータス：</strong><%= @concert.status %></p>
    <p><strong>開催日：</strong><%= @concert.date.strftime('%Y/%m/%d') %></p>
    <p><strong>会場名：</strong><%= @concert.venue %></p>
    <p><strong>感想：</strong><br><%= simple_format(@concert.memo) %></p>
    <p><strong>セットリスト：</strong><br><%= simple_format(@concert.setlist) %></p>
  </div>
  
  <% if @concert.image.attached? %>
    <div class="concert-image">
      <%= image_tag @concert.image, size: "800x500" %>
    </div>
  <% end %>

  <div class="btn-group">
    <%= link_to "編集", edit_concert_path(@concert), class: "btn-secondary" %>
    <%= link_to "削除", concert_path(@concert), data: { turbo_method: :delete }, class: "btn-danger" %>
    <%= link_to "一覧に戻る", concerts_path, class: "btn-primary" %>
  </div>
</div>
