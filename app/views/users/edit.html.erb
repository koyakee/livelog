<h2>プロフィール編集</h2>

<%= form_with(model: @user, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name, "名前" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <%= form.submit "更新する", class: "btn btn-primary" %>
<% end %>

<%= link_to "マイページに戻る", user_path(@user), class: "btn btn-secondary mt-3" %>
